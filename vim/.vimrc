set textwidth=80

set encoding=utf-8
set fileencodings=utf-8
set ffs=unix,dos

" Indentation managememnt
set autoindent
set smartindent
set expandtab
set shiftwidth=4
set softtabstop=4

" Syntax highlight
syntax on
set background=dark

" Keep 10 lines of context
set scrolloff=10

set number

set wildmenu
